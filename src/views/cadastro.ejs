<%- include('includes/header') -%>
<div class="container">
    <main>
      <div class="py-5 text-center">
        
        <h2>Cadastrar</h2>
        <p class="lead">Podemos começar a se conhecer aqui, qual seu nome?</p>
      </div>
  
      <div class="row justify-content-center">
        
        <div class="col-md-8 col-lg-6">
          
          <form method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-sm-6">
                <label for="firstName" class="form-label">Nome completo</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="" required>

              </div> 
               <div class="col-sm-6">
                <label for="number" class="form-label">Número de telefone</label>
                <input type="text" class="form-control" id="number" placeholder="" value="" required>

              </div>
  
              
  
              <div class="col-12">
                <label for="username" class="form-label">Usuário</label>
                <div class="input-group has-validation">
                  <span class="input-group-text">@</span>
                  <input type="text" class="form-control" id="username" placeholder="meunome" required>
              
                </div>
              </div>
  
              <div class="col-12">
                <label for="email" class="form-label">Email </label>
                <input type="email" class="form-control" id="email" name="email" placeholder="voce@exemplo.com">
               
              </div>
  
              <div class="col-12">
                <label for="address" class="form-label">Endereço(opcional)</label>
                <input type="text" class="form-control" id="address" placeholder="Rua conhecida, 240" required>
               
              </div>
  
  
              <div class="col-md-5">
                <label for="country" class="form-label">País</label>
                <select class="form-select" id="country" required>
                  <option value="">Escolha...</option>
                  <option>Brasil</option>
                </select>
                
              </div>
  
              <div class="col-md-4">
                <label for="state" class="form-label">Estado(opcional)</label>
                <select class="form-select" id="state" required>
                  <option value="">Escolha...</option>
                  <option>Paraná</option>
                </select>
                
              </div>
  
              <div class="col-md-3">
                <label for="zip" class="form-label">CEP(opcional)</label>
                <input type="text" class="form-control" id="zip" placeholder="" required>
                
              </div>
            </div>
  
            <hr class="my-4">
  
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="same-address">
              <label class="form-check-label" for="same-address">Receber notificações via email.</label>
            </div>
  
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="save-info">
              <label class="form-check-label" for="save-info">Salvar usuário no navegador.</label>
            </div>
  
            <hr class="my-4">
  
            <h4 class="mb-3">Senha</h4>
  
       
  
            <div class="row gy-3">
              <div class="col-md-6">
                <label for="password" class="form-label">Digite sua senha:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="" required>
              </div>
  
              <div class="col-md-6">
                <label for="password" class="form-label">Digite novamente sua senha:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="" required>
              </div>
            </div>
  
            <hr class="my-4">
  
            <button class="w-100 btn btn-primary btn-lg" type="submit">Confirmar cadastro de usuário</button>
          </form>
        </div>
      </div>
    </main>
<%- include('includes/footer') -%>